<div class="prerequisites-form row">
  <h4 class="col-8 col-md-offset-2">Add prerequisite chores for: </h4>
  <h3 class="col-8 col-md-offset-2"><%= @chore.name %> (<%= @chore.room.name %>)</h3>
  <%= form_for :chore_prerequisite, html: { class: "new-prerequisites-form col-6 col-md-offset-3" } do |f| %>
    <%= f.hidden_field :chore_id, value: @chore.id %>
    <%= f.collection_check_boxes(:prerequisite_ids, @potential_prereqs, :id, :name, include_hidden: false) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box col-12") do %>
          <div class="row">
            <div class="col-6">
              <%= b.object.name %>
            </div>

            <div class="col-1">
              <%= b.check_box(class: "check_box") %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= f.submit(class: "col-4 col-md-offset-4") %>
  <% end %>
</div>
